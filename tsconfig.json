{
    "compilerOptions": {
      "target": "ES6",                           
      "module": "ESNext",                        
      "jsx": "react-jsx",                        
      "declaration": true,                       
      "declarationDir": "dist",                  
      "outDir": "dist",                          
      "strict": true,                           
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "moduleResolution": "node",               
      "allowSyntheticDefaultImports": true      
    },
    "include": ["src"],                          
    "exclude": ["node_modules", "dist"]          
  }  